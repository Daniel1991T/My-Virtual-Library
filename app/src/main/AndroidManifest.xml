<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.compani.ilai.myvirtuallibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".view.book.AlreadyReadActivity" />
        <activity android:name=".view.book.FavoriteActivity" />
        <activity android:name=".view.book.CurrentlyReadActivity" />
        <activity android:name=".view.book.WantToReadActivity" />
        <activity android:name=".services.AddBookActivity" />
        <activity android:name=".view.book.AllBooksActivity" />
        <activity android:name=".view.book.BooksActivity" />
        <activity android:name=".view.profile.MyProfileActivity" />
        <activity android:name=".view.loginRegister.RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".view.loginRegister.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>